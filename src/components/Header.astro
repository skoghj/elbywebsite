<script>
    // Mobile Menu Toggle (Burger Menu)
    const burgerMenuBtn = document.getElementById('burger-menu');
const burgerIcon = document.getElementById('burger-icon');
const closeIcon = document.getElementById('close-icon');
const dropdownOverlay = document.getElementById('dropdown-overlay');
const beerDropdown = document.getElementById('beer-dropdown');
const arrowIcon = document.getElementById('arrow-icon');
const arrowToggle = document.getElementById('arrow-toggle');

// Toggle Burger Menu and Dropdown
burgerMenuBtn.addEventListener('click', () => {
    // Toggle mobile menu visibility
    dropdownOverlay.classList.toggle('hidden');
    // Toggle burger/close icon
    burgerIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');
});

// Toggle Accordion Dropdown (Arrow Button Only)
arrowToggle.addEventListener('click', (e) => {
    e.preventDefault(); // Prevent link navigation
    beerDropdown.classList.toggle('hidden'); // Show/hide dropdown content
    arrowIcon.classList.toggle('rotate-180'); // Rotate the arrow icon
});
</script>