---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-[0.5rem] px-xs py-xxs text-neutral-50 font-lato";

const variantClasses = {
  primary: "bg-blue-700 hover:bg-blue-900",
  secondary: "bg-orange-600 hover:bg-orange-700",
};

const sizeClasses = {
  large: "text-[24px]",
  medium: "text-[18px]",
  small: "text-base",
  xsmall: "text-[14px]",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
