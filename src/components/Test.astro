---
// src/pages/index.astro
import Dropdown from "../components/Dropdown.astro";
import Link from "../components/Link.astro";

const sleeve = [
  { value: "m/installation og ansøgning", label: "Med installation og ansøgning" },
  { value: "m/installation", label: "Med installation" },
  { value: "u/installation", label: "Uden installation" },
];
---

<section x-data="{ selected: 'm/installation og ansøgning' }" @dropdown-change.window="selected = $event.detail">
  <div class="relative max-w-screen-xl mx-auto flex flex-col-reverse lg:flex-row items-center gap-8 px-4 sm:px-6 md:px-12 lg:pl-14 lg:py-2xl py-8">

    <!-- Venstre kolonne -->
    <div class="w-full lg:max-w-[344px] ">
      <div class="space-y-6">
        <h2 class="">ELBY Fortovsskinne</h2>
        <p class="">Er fortovet i vejen for din drøm om at køre elbil? <br> Elby har løst problemet med en fortovsskinne i et kompakt og funktionelt design.</p>

        <div class="mx-auto lg:mx-0">
          <Dropdown options={sleeve} placeholder="Vælg skinne til dit behov..." />
        </div>

        <!-- Info Cards -->
        <div class="space-y-4 text-left">
          <template x-if="selected === 'm/installation og ansøgning'">
            <div>
              <ul class="space-y-2 lg:space-y-0  border-t border-neu_db-400" >
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/SleevIcon.svg" class="w-10 h-10" alt="icon"/> <p>2m fortovsskinne inkl. lim</p></li>
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/installation.svg" class="w-10 h-10" alt="icon"/> <p>1-2 dages Installation</p></li>
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/ansogningIcon.svg" class="w-10 h-10" alt="icon"/> <p>Ansøgning til kommunen</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">3.299 kr.</p>
            </div>
          </template>

          <template x-if="selected === 'm/installation'">
            <div>
              <ul class="space-y-2 lg:space-y-0">
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/SleevIcon.svg" class="w-10 h-10" alt="icon"/> <p>2m fortovsskinne inkl. lim</p></li>
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/installation.svg" class="w-10 h-10" alt="icon"/> <p>1-2 dages Installation</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">2.799 kr.</p>
            </div>
          </template>

          <template x-if="selected === 'u/installation'">
            <div>
              <ul class="space-y-2 lg:space-y-0">
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/SleevIcon.svg" class="w-10 h-10" alt="icon"/> <p>2m fortovsskinne inkl. lim</p></li>
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/Montagevejledning.svg" class="w-10 h-10" alt="icon"/> <p>Montagevejledning</p></li>
                <li class="flex items-center gap-3 border-b border-neu_db-400 py-2"><img src="/fragtIcon.svg" class="w-10 h-10" alt="icon"/> <p>Fri fragt</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">999 kr.</p>
            </div>
          </template>

          <div class="pt-4">
            <Link href="../bestil" variant="primary" size="full">
              Bestil Elby til din boligforening
            </Link>
          </div>
        </div>
      </div>
    </div>

    <!-- Højre kolonne: Video -->
    <div class="w-full lg:w-1/2">
      <div class="w-full aspect-video max-h-[400px] overflow-hidden">
        <video class="w-full h-full object-cover" autoplay muted loop playsinline>
          <source src="/fortovskinne.webm" type="video/webm" />
        </video>
      </div>
    </div>

  </div>
</section>

