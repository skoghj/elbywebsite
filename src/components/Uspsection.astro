---
import Usp from "./Usp.astro";
import Link from "./Link.astro";
const { header, text1, text2, text3, alt1, alt2, alt3, img1, img2, img3, buttonText, buttonlink = "#", linkVariant = "primary" } = Astro.props;
---

<section class="py-lg">
  <div class="mx-auto max-w-[1280px]">
    <h2 class="text-center pb-sm">{header}</h2>

    <div class="flex flex-col sm:flex-row pb-sm">
      <Usp text={text1} img={img1} alt={alt1} />

      <Usp text={text2} img={img2} alt={alt2} />

      <Usp text={text3} img={img3} alt={alt3} />
    </div>

    <div class="flex justify-center">
      <Link href={buttonlink} variant={linkVariant} size="standard">{buttonText}</Link>
    </div>
  </div>
</section>
