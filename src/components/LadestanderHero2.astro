---
// src/pages/index.astro
import Dropdown from "../components/Dropdown.astro";
import Link from "../components/Link.astro";

const materiale = [
  { value: "Ladestander i træ", label: "Elby Ladestander i træ" },
  { value: "Ladestander i beton", label: "Elby Ladestander i beton" },
  { value: "Ladestander i stål", label: "Elby Ladestander i stål" },
];
---

<section x-data="{ selected: 'Ladestander i træ' }" @dropdown-change.window="selected = $event.detail">
  <div class="relative max-w-screen-xl mx-auto flex flex-col-reverse lg:flex-row items-center gap-8 px-4 sm:px-6 md:px-12 lg:px-20 py-8">

    <!-- Venstre kolonne -->
    <div class="w-full lg:w-1/2">
      <div class="space-y-6">
        <h1 class="text-3xl sm:text-4xl font-bold">Elby Ladestander</h1>
        <p class="text-lg font-medium md:text-body-lg">Med Elby Ladestander får du en helt ny måde at tænke ladestander på.</p>

        <div class="max-w-sm mx-auto lg:mx-0">
          <Dropdown options={materiale} placeholder="Vælg ladestander type..." />
        </div>

        <!-- Info Cards -->
        <div class="space-y-4 text-left">
          <template x-if="selected === 'Ladestander i træ'">
            <div>
              <ul class="space-y-2">
                <li class="flex items-center gap-3"><img src="/layers.svg" class="w-10 h-10"/><p>Egetræ</p></li>
                <li class="flex items-center gap-3"><img src="/maaler.svg" class="w-10 h-10"/><p>Mål: 77x22x22cm</p></li>
                <li class="flex items-center gap-3"><img src="/installation2.svg" class="w-10 h-10"/><p>Installation 1-2 dage</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">39.999 kr.</p>
            </div>
          </template>

          <template x-if="selected === 'Ladestander i beton'">
            <div>
              <ul class="space-y-2">
                <li class="flex items-center gap-3"><img src="/layers.svg" class="w-10 h-10"/><p>Beton</p></li>
                <li class="flex items-center gap-3"><img src="/maaler.svg" class="w-10 h-10"/><p>Mål: 60x20x20cm</p></li>
                <li class="flex items-center gap-3"><img src="/installation2.svg" class="w-10 h-10"/><p>Installation 1-2 dage</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">43.999 kr.</p>
            </div>
          </template>

          <template x-if="selected === 'Ladestander i stål'">
            <div>
              <ul class="space-y-2">
                <li class="flex items-center gap-3"><img src="/layers.svg" class="w-10 h-10"/><p>Stål</p></li>
                <li class="flex items-center gap-3"><img src="/maaler.svg" class="w-10 h-10"/><p>Mål: 55x22x22cm</p></li>
                <li class="flex items-center gap-3"><img src="/installation2.svg" class="w-10 h-10"/><p>Installation 1-2 dage</p></li>
              </ul>
              <p class="mt-4 text-sm">Pris inkl. moms</p>
              <p class="text-3xl font-bold">49.999 kr.</p>
            </div>
          </template>

          <div class="pt-4">
            <Link href="../bestil" variant="primary" size="standard">
              Bestil Elby til din boligforening
            </Link>
          </div>
        </div>
      </div>
    </div>

    <!-- Højre kolonne: Video -->
    <div class="w-full lg:w-1/2">
      <div class="w-full aspect-video max-h-[400px] overflow-hidden">
        <video class="w-full h-full object-cover" autoplay muted loop playsinline>
          <source src="/fortovskinne.webm" type="video/webm" />
        </video>
      </div>
    </div>

  </div>
</section>

