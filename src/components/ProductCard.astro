---
const { title, subtitle, image, features = [], price, buttonText, buttonLink = "#" } = Astro.props;
import Link from "../components/Link.astro";
---

<article class="rounded-md w-full max-w-md mx-auto overflow-hidden bg-primary-50 shadow-md">
  <!-- Header -->
  <div class="bg-acc_yel-500 p-6 flex items-center gap-6">
    <div class="aspect-square w-20 bg-primary-50 rounded-full flex items-center justify-center">
      <!-- TiltÃ¸je icon -->
      <img src="/boligforening-building.svg" alt="boligforening card ikon" />
    </div>
    <div>
      <p class="text-body-lg font-bold">{title}</p>
      <p class="font-semibold text-neu_db-700">{subtitle}</p>
    </div>
  </div>

  <!-- Image -->
  <img src={image} alt={title} class="w-full px-6 pt-6 aspect-[4/2] object-cover" />

  <!-- Features List -->
  <div class="p-6 space-y-1">
    {
      features.map((feature) => (
        <div class="flex items-center gap-3 text-sec_bl-950 text-body-sm md:text-body-sm-tablet lg:text-body-sm-desktop">
          <span class="w-12 h-10" set:html={feature.icon} />
          <p>{feature.text}</p>
        </div>
      ))
    }

    <!-- Price -->
    <div class="pt-6">
      <p>Ladepris for brugerne</p>
      <p class="text-body-lg font-bold py-2 md:text-body-lg-tablet lg:text-body-lg-desktop">{price}</p>
    </div>

    <!-- Link -->
    <Link href="#" variant="primary" size="full">{buttonText}</Link>
  </div>
</article>
