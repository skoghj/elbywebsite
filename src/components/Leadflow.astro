
<div class="w-full bg-sec_be-500" id="leadflow">
  <div class="grid grid-cols-1 md:grid-cols-2">
    
    <!-- venstre billede -->
    <div class="hidden md:block h-[600px] md:h-[700px]">
      <img src="../bestil.webp" alt="Elby illustration" id="rightImage" class="w-full h-full object-cover" />
    </div>
    
    <!-- højre leadflow -->
 <div class="h-[700px] md:h-[600px] mx-lg mt-lg flex flex-col justify-center items-center">
  <!-- Container med max-width og centreret -->
  <div class="w-full max-w-[600px]">
    <h2 class="mb-md lg:mb-lg text-title-lg">Se hvilken løsning fra Elby, der passer til dig</h2>
    <div id="app" class="w-full"></div>
  </div>
</div>
  </div>
  </div>


<script type="module">
  import { animate } from "https://cdn.skypack.dev/motion";

  const questions = [
    {
      question: "Hvilken type lejlighed bor du i?",
      options: [
        { label: "Leje", icon: "/boligforening-building.svg", image: "/ejendomby.webp" },
        { label: "Andel", icon: "/ejendom-building.svg", image: "/opladning2.webp" },
        { label: "Ejer", icon: "/ejendom-building.svg", image: "/opladning3.webp" }
      ]
    },
    {
      question: "Hvordan parkerer man ved jeres opgang?",
      options: ["Parkering på gaden", "Privatparkeringsplads eller p kælder", "Ingen parkeringspladser"]
    },
    {
      question: "Er der cykelsti mellem fortov og gade?",
      options: ["Ingen cykelsti", "Cykelsti", "Ved ikke"]
    },
    {
      question: "Hvor mange fortovsfliser er der mellem bygningsmur og parkering?",
      options: ["1 flise", "2 fliser", "3 eller flere fliser"]
    },
    {
      question: "Hvad er din rolle i opgangen?",
      options: ["Beboer", "Bestyrelsesmedlem", "Administrator eller bygningsejer"]
    }
  ];

  const disqualifyingAnswers = [
    "Privatparkeringsplads eller p kælder",
    "Ingen parkeringspladser",
    "Cykelsti",
    "3 eller flere fliser"
  ];

  let step = 0;
  const answers = [];
  const app = document.getElementById("app");
  const rightImg = document.querySelector("#leadflow img");

  // Vi opretter progressbar-elementerne her, men indsætter dem dynamisk i render
  const progressBarContainer = document.createElement("div");
  progressBarContainer.id = "progressBarContainer";
  progressBarContainer.className = "w-full h-2 bg-gray-300 rounded overflow-hidden mt-4";

  const progressBar = document.createElement("div");
  progressBar.id = "progressBar";
  progressBar.className = "h-2 bg-acc_yel-500 rounded w-0";

  progressBarContainer.appendChild(progressBar);

  function updateProgressBar() {
    const totalSteps = questions.length;
    if (step > 0 && step < totalSteps) {
      progressBarContainer.style.display = "block";
      const progressPercent = (step / totalSteps) * 100;
      progressBar.style.width = progressPercent + "%";
    } else {
      progressBarContainer.style.display = "none";
      progressBar.style.width = "0%";
    }
  }

  function animateIn() {
    animate("#app > *", { opacity: [0, 1], y: [20, 0] }, { duration: 0.4 });
  }

  function updateRightImage() {
    if (step === 0 && answers[0]) {
      const selected = questions[0].options.find(o => o.label === answers[0]);
      if (selected) rightImg.src = selected.image;
    } else if (step > 0) {
      rightImg.src = "/opladning1.webp";
    } else {
      rightImg.src = "../Elby_løsning.png";
    }
  }

  function render() {
    app.innerHTML = "";
    updateRightImage();

    const q = questions[step];

    if (step < questions.length) {
      const container = document.createElement("div");
      container.className = "max-w-[600px] mx-auto";

      if (step === 0) {
        container.innerHTML = `
     
          <h2 class="text-lg font-body font-semibold mb-4">${q.question}</h2>
          <div id="optionSelector" class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
            ${q.options.map(opt => `
              <div class="optionSelector cursor-pointer flex flex-col items-center shadow bg-acc_yel-50 p-4 rounded transition border-2 border-transparent hover:border-acc_yel-500" data-answer="${opt.label}">
                <img src="${opt.icon}" alt="${opt.label}" class="w-16 h-16 mb-2 object-contain" />
                <span>${opt.label}</span>
              </div>
            `).join('')}
          </div>
          <button id="firstNextBtn" class="w-full bg-acc_yel-500 text-black py-2 rounded mt-4">Se om du kan få Elby</button>
        `;
        app.appendChild(container);

        const nextBtn = container.querySelector("#firstNextBtn");
        nextBtn.classList.remove("hidden");

        container.querySelectorAll(".optionSelector").forEach(el => {
          el.addEventListener("click", () => {
            container.querySelectorAll(".optionSelector").forEach(o => o.classList.remove("selected"));
            el.classList.add("selected");
            answers[0] = el.dataset.answer;
            updateRightImage();
          });
        });

        nextBtn.addEventListener("click", () => {
          if (!answers[0]) {
            alert("Vælg venligst en mulighed før du fortsætter");
            return;
          }
          step++;
          render();
        });

        // Ingen progressbar på step 0
      } else {
        // Step > 0: spørgsmål med tilbage-knap og progressbar UNDER tilbageknappen
        container.innerHTML = `
          <h2 class="text-lg font-body font-semibold mb-4">${q.question}</h2>
          <div class="space-y-2">
            ${q.options.map(opt => `
              <button class="w-full text-left border-black shadow bg-acc_yel-50 hover:bg-acc_yel-500 px-4 py-2 rounded transition" data-answer="${opt}">${opt}</button>
            `).join('')}
          </div>
          <button id="backBtn" class="mt-6 text-blue-600">Tilbage</button>
        `;

        app.appendChild(container);

        container.querySelectorAll("[data-answer]").forEach(btn => {
          btn.addEventListener("click", () => {
            answers[step] = btn.dataset.answer;
            step++;
            render();
          });
        });

        container.querySelector("#backBtn").addEventListener("click", () => {
          step--;
          render();
        });

        // Indsæt progressbar lige under tilbageknappen
        container.appendChild(progressBarContainer);
        updateProgressBar();
      }
    } else if (step === questions.length) {
      // Slutskærm med tilbageknap OG progressbar skjult
      const hasDisqualifying = answers.some(a => disqualifyingAnswers.includes(a));
      const container = document.createElement("div");
      container.className = "max-w-[600px] mx-auto";

      if (hasDisqualifying) {
        container.innerHTML = `
          <h2 class="text-2xl font-bold mb-4">Vi har brug for flere oplysninger</h2>
          <p class="text-gray-700 mb-4">Vi mangler lidt information for at kunne give dig den bedste løsning.</p>
          <img src="/images/extra-info.png" alt="Ekstra oplysninger" class="w-full h-auto mb-6 rounded" />
        `;
      } else {
        container.innerHTML = `
          <h2 class="text-2xl font-bold mb-4">Du er klar til Elby!</h2>
          <p class="text-gray-700 mb-4">Fantastisk! Send os dine kontaktoplysninger.</p>
          <img src="/images/ready-elby.png" alt="Klar til Elby" class="w-full h-auto mb-6 rounded" />
        `;
      }

      container.innerHTML += `
        <button id="continueBtn" class="w-full bg-acc_yel-500 text-black py-2 rounded mb-2">Indtast dine kontaktoplysninger</button>
        <button id="backBtn" class="text-blue-600">Tilbage</button>
      `;

      app.appendChild(container);

      container.querySelector("#continueBtn").addEventListener("click", () => {
        step++;
        render();
      });

      container.querySelector("#backBtn").addEventListener("click", () => {
        step--;
        render();
      });

      // Skjul progressbar på slutskærm
      progressBarContainer.style.display = "none";
    } else if (step === questions.length + 1) {
      // Kontaktformular
      const form = document.createElement("div");
      form.className = "max-w-[600px] mx-auto";
      form.innerHTML = `
        <h2 class="text-lg font-body font-semibold mb-4">Indtast dine kontaktoplysninger</h2>
        <form id="contactForm" class="space-y-4">
          <input type="text" placeholder="Navn" class="w-full border p-2 rounded" required />
          <input type="email" placeholder="Email" class="w-full border p-2 rounded" required />
          <input type="tel" placeholder="Telefonnummer" class="w-full border p-2 rounded" />
          <textarea placeholder="Evt. kommentar" class="w-full border p-2 rounded"></textarea>
          <button type="submit" class="w-full bg-acc_yel-500 text-black py-2 rounded">Send</button>
        </form>
        <button id="backBtn" class="mt-4 text-blue-600">Tilbage</button>
      `;

      app.appendChild(form);

      form.querySelector("#contactForm").addEventListener("submit", (e) => {
        e.preventDefault();
        step++;
        render();
      });

      form.querySelector("#backBtn").addEventListener("click", () => {
        step--;
        render();
      });

      // Skjul progressbar på kontaktformular
      progressBarContainer.style.display = "none";
    } else {
      // Slutskærm efter form
      app.innerHTML = `
    
      <div class="flex flex-col mt-lg items-center text-center">
        <img src="../" alt="Thumbs Up" class="mb-6 w-20 h-20" />
        <h2 class="text-2xl font-bold ">Tak for din henvendelse!</h2>
        <p>Vi vender tilbage hurtigst muligt.</p>
      </div>
  
      `;
      // Skjul progressbar på slutskærm
      progressBarContainer.style.display = "none";
    }

    animateIn();
  }

  render();