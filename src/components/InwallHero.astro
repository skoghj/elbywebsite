---
import Link from "../components/Link.astro";
---

<section x-data="{ selected: 'Ladestander i træ' }" @dropdown-change.window="selected = $event.detail">
  <div class="relative max-w-screen-xl mx-auto flex flex-col-reverse lg:flex-row items-center gap-8 px-4 sm:px-6 md:px-12 lg:pl-14 lg:py-2xl py-8">

    <!-- Venstre kolonne -->
    <div class="lg:w-1/2">
    <div class="w-full lg:max-w-[444px] ">
      <div class="space-y-6">
        <h2 class="">ELBY Ladestander</h2>
        <p class="">Med Elby Ladestander får du en helt ny <br> måde at tænke ladestander på.</p>


          <div class="pt-4">
            <Link href="../bestil" variant="primary" size="full">
              Bestil Elby til din boligforening
            </Link>
          </div>
      </div>
    </div>
    </div>
 

    <!-- Højre kolonne: Video -->
    <div class="w-full lg:w-1/2">
      <div class="w-full aspect-video max-h-[400px] overflow-hidden">
        <video class="w-full h-full object-cover" autoplay muted loop playsinline>
          <source src="/fortovskinne.webm" type="video/webm" />
        </video>
      </div>
    </div>

  </div>
</section>

