---
import MainLayout from "../layouts/MainLayout.astro";
import MultiForm from "../components/Multiform.astro";
---

<MainLayout title="Få Elby i din bygning">
  
  <div class="grid grid-cols-1 md:grid-cols-5 w-full min-h-screen">
    <!-- Venstre billede -->
    <div class="w-full h-full col-span-2">
      <img src="/bestil.webp" alt="Elby oplader" class="w-full h-full object-cover" />
    </div>

    <!-- Højre formular-side -->
    <div class="w-full h-full flex flex-col items-center justify-center col-span-3">
      <MultiForm />
    </div>
  </div>
</MainLayout>
