---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Få Elby i din bygning">
  <div x-data="{ step: 1 }" class="w-full grid grid-cols-1 md:grid-cols-2">
    <!-- Venstre billede -->
    <div class="w-full h-full">
      <img src="/kontakt.webp" alt="Elby oplader" class="w-full h-full object-cover" />
    </div>

    <!-- Højre formular -->
    <div class="w-full p-2xl">
      <!-- FORMULAR (step 1) -->
      <template x-if="step === 1">
        <form name="kontakt" method="POST" data-netlify="true" netlify @submit="step = 2" target="netlifyFrame" class="space-y-m">
          <!-- Netlify kræver denne -->
          <input type="hidden" name="form-name" value="kontakt" />

          <h2 class="">Kontakt os</h2>
          <p class="">
            Har du spørgsmål, så fang os på hej@elby.co eller <br />
            udfyld kontaktformularen nedenfor
          </p>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-m">
            <div>
              <label class="block mb-1 font-semibold">Fornavn <span class="text-acc_yel-700">*</span></label>
              <input type="text" name="firstName" placeholder="Mads" required class="w-full p-xxs rounded-xs border neu_db-300 shadow-sm" />
            </div>

            <div>
              <label class="block mb-1 font-semibold">Efternavn <span class="text-acc_yel-700">*</span></label>
              <input type="text" name="lastName" placeholder="Hansen" required class="w-full p-xxs rounded-xs border neu_db-300 shadow-sm" />
            </div>

            <div>
              <label class="block mb-1 font-semibold">E-mail <span class="text-acc_yel-700">*</span></label>
              <input type="email" name="email" placeholder="mads.hansen@gmail.com" required class="w-full p-xxs rounded-xs border neu_db-300 shadow-sm" />
            </div>

            <div>
              <label class="block mb-1 font-semibold">Telefon (valgfri)</label>
              <input type="tel" name="phone" placeholder="+45 12 34 56 78" class="w-full p-xxs rounded-xs border neu_db-300 shadow-sm" />
            </div>
          </div>

          <div>
            <label class="block mb-1 font-semibold">Besked (valgfri)</label>
            <textarea name="message" placeholder="Skriv kort, hvad du gerne vil vide, så vender vi hurtigt tilbage" rows="5" class="w-full p-xxs rounded-xs border neu_db-300 shadow-sm"></textarea>
          </div>

          <div class="flex justify-center mt-md">
            <Button variant="primary" size="standard" type="submit">Indsend</Button>
          </div>
        </form>
      </template>

      <!-- TAKKE-VISNING (step 2) -->
      <template x-if="step === 2">
        <div class="text-center mt-l p-l border-4 rounded-lg border-acc_yel-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-24 mx-auto text-acc_yel-700 pb-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z"></path>
          </svg>
          <h2 class="pb-4">Tak for din henvendelse!</h2>
          <p class="text-body-md pb-4">Vi vender tilbage hurtigst muligt.</p>
          <Button variant="primary" size="standard" type="button" @click="window.location.href='/'"> Gå til forside </Button>
        </div>
      </template>

      <!-- Netlify submit trigger -->
      <iframe name="netlifyFrame" style="display:none;"></iframe>
    </div>
  </div>
</MainLayout>
