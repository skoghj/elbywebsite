---
import MainLayout from "../layouts/MainLayout.astro";
import Toggle from "../components/Toggle.astro";
import Uspsection from "../components/Uspsection.astro";
import Splitcontent from "../components/Splitcontent.astro";
import Infografik from "../components/Infografiksektion.astro";
import Prefooter from "../components/Prefooter.astro";
import Link from "../components/Link.astro";
const vægladerSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: "Elby Væglader",
  image: ["https://elbyprojekt4.netlify.app/bolig/ejendomhero2.webp"],
  description: "Elby væglader er en intelligent og pladsbesparende ladeløsning til etageejendomme. Den installeres direkte i bygningens facade, kræver ingen plads på fortov eller vej og gør elbilopladning muligt for både beboere og besøgende. Gratis for boligforeninger og med mulighed for overskudsdeling.",
  brand: {
    "@type": "Brand",
    name: "Elby",
  },
  sku: "elby-væglader",
  offers: {
    "@type": "Offer",
    url: "https://elbyprojekt4.netlify.app/bestil/",
    priceCurrency: "DKK",
    price: "kontakt for pris",
    itemCondition: "https://schema.org/NewCondition",
    availability: "https://schema.org/InStock",
  },
};
---

<MainLayout title="Elby – Ladeløsning til boligforeninger og ejendomsselskaber" description="Elby tilbyder intelligente elbil-ladeløsninger til boligforeninger og ejendomsselskaber – med gratis installation, ingen abonnement og mulighed for overskudsdeling." ogtitle="Elby – Ladeløsning til bygninger med fællesskab og forretning" ogdescription="Få Elby til din bygning – grøn elbilopladning uden bøvl. Gratis for boligforeninger, med overskudsdeling og professionel installation for ejendomsselskaber.">
  <section x-data="{
    selected: 'bolig', // default bolig!
    init() {
      this.$watch('selected', value => {
        const url = new URL(window.location);
        url.searchParams.set('tab', value);
        window.history.replaceState({}, '', url);
      });

      // Hvis URL'en allerede har en tab parameter, så skal den bruges som startværdi
      const param = new URLSearchParams(window.location.search).get('tab');
      if (param === 'ejendom') this.selected = 'ejendom';
    }
  }" @toggle-change.window="selected = $event.detail">
    <!-- Øverste del af det fælles layout -->
    <section class="flex flex-col lg:flex-row bg-sec_be-500">
      <div class="flex flex-col justify-center mx-auto p-sm w-full order-2 lg:order-1 sm:max-w-md">
        <div class="mb-4 break-words">
          <h1 class="" x-show="selected === 'bolig'">Elby ladeløsning: boligforening</h1>
          <h1 x-show="selected === 'ejendom'">Elby ladeløsning: ejendomsselskab</h1>
        </div>
        <p class="break-words">Hos Elby har vi løsninger, der passer til forskellige behov. Elby Partner tilbydes til ejer-, andels- og almene boliger ud fra et andelsprincip.</p>

        <!-- Toggle -->
        <div class="my-sm">
          <p class="mb-xs break-words">Er du en boligforening eller et ejendomsselskab?</p>
          <Toggle />
        </div>

        <!-- Indhold vist betinget af valgt tilstand (information) -->
        <template x-if="selected === 'bolig'">
          <div class="mb-xs">
            <ul>
              <li class="flex items-center gap-xs border-b-[1px] border-t-[1px] border-neu_db-400 py-xxxs"><img src="../svg/installation.svg" class="w-12 h-10" /><p>Installation <span class="font-semibold">0 kr.</span></p></li>
              <li class="flex items-center gap-xs border-b-[1px] border-neu_db-400 py-xxxs"><img src="../svg/abonnement.svg" class="w-12 h-10" /><p>Abonnement <span class="font-semibold">0 kr.</span></p></li>
              <li class="flex items-center gap-xs border-b-[1px] border-neu_db-400 py-xxxs"><img src="../svg/overskudsdeling.svg" class="w-12 h-10" /><p>Overskudsdeling <span class="font-semibold">op til 50%</span></p></li>
            </ul>
            <dl class="my-6 flex flex-col sm:flex-row items-baseline gap-x-3 w-full">
              <dd class="text-3xl font-bold">2,99 kr/kWh</dd>
              <dt class="font-medium">Ladepris for brugerne</dt>
            </dl>
            <Link href="../bestil" variant="primary" size="full">Få Elby til din boligforening</Link>
          </div>
        </template>

        <template x-if="selected === 'ejendom'">
          <div class="mb-xs">
            <ul>
              <li class="flex items-center gap-xs border-b-[1px] border-t-[1px] border-neu_db-400 py-xxxs"><img src="../svg/installation.svg" class="w-12 h-10" /><p>Installation <span class="font-semibold">30.000 kr.</span></p></li>
              <li class="flex items-center gap-xs border-b-[1px] border-neu_db-400 py-xxxs"><img src="../svg/abonnement.svg" class="w-12 h-10" /><p>Abonnement<span class="font-semibold"> 0 kr.</span></p></li>
              <li class="flex items-center gap-xs border-b-[1px] border-neu_db-400 py-xxxs"><img src="../svg/overskudsdeling.svg" class="w-12 h-10" /><p>Overskudsdeling <span class="font-semibold">op til 60%</span></p></li>
            </ul>
            <dl class="my-6 flex flex-col sm:flex-row items-baseline gap-x-3 w-full">
              <dd class="text-3xl font-bold">2,99 kr/kWh</dd>
              <dt class="">Ladepris for brugerne</dt>
            </dl>
            <Link href="../bestil" variant="tertiary" size="full">Få Elby til dit ejendomsselskab</Link>
          </div>
        </template>
      </div>
      <div class="order-1 lg:order-2 lg:w-1/2">
        <!-- bolig image -->
        <img x-show="selected === 'bolig'" src="../bolig/bolighero1.webp" alt="Elby oplader bolig" class="w-full h-full object-cover" />

        <!-- ejendom image -->
        <img x-show="selected === 'ejendom'" src="../bolig/ejendomhero2.webp" alt="Elby oplader ejendom" class="w-full h-full object-cover" />
      </div>
    </section>

    <!-- Boligforening under sektion -->
    <template x-if="selected === 'bolig'">
      <div>
        <div class="fade-in-up">
          <Uspsection header="Fordele ved at vælge Elby til din boligforening" text1="1. Gratis lader og fri installation" text2="2. Nemt at komme i gang – vi klarer det hele" text3="3. Overskudsdeling op til 50%" img1="../svg/gratis_lader.svg" img2="../svg/installation.svg" img3="../svg/overskudsdeling.svg" alt1="Installation ikon" alt2="Abonnement ikon" alt3="Overskudsdeling ikon" showButton="false" />
        </div>
        <div class="bg-sec_be-500 fade-in-up">
          <Splitcontent img="../bolig/bolig_faellesskab.webp" header="Din opgang er det nye ladefællesskab" text1="Med Elby lades bilerne, dér hvor beboerne bor, og byen får flere ladepunkter. Elby er baseret på andelstanken, og Elby-ladepunkter på offentlig vej kan bruges af alle byens borgere. Derfor får du som bygningsejer del i overskuddet, når jeres ladepunkter bruges. Vi kalder det ladefællesskab, og vi glæder os til at få jer med!" alt="fællesskaber picture" linkText="Læs mere om Elbys vision" href="../omelby" />
        </div>

        <div class="fade-in-up">
          <Infografik
            img="../svg/infografikBolig.svg"
            header="Jo mere du lader, jo mere får du tilbage."
            text1="Elby Partner tilbydes til ejer-, andels- og almene boliger ud fra et andelsprincip. Vi sørger for alt det praktiske, samt udlægget for den fulde installation. Når omkostningen er tjent hjem, deler vi op til halvdelen af overskuddet med jer. Uanset hvor meget – eller lidt – der lades i din bygning, skal foreningen aldrig have penge op af lommen.  "
            text2="Vi tager os desuden af alt det administrative med afregning med elselskabet. Og fordi vi også leverer strømmen, skal du ikke heller ikke bøvle med afgiftsrefusion. "
            alt="boligforening infografik"
            buttonText="Få Elby på generalforsamlingen"
            buttonlink="https://www.elby.dk/guides-artikler/generalforsamling-med-elby"
            linkVariant="secondary"
          />
        </div>
        <div class="bg-sec_be-500 fade-in-up">
          <Splitcontent img="../bolig/bolig_ai.webp" header="En in-wall løsning til byen" text1="I byen kan det være svært at installere en privat ladeboks, og derfor har vi skabt Elby – en innovativ ladeløsning tilpasset etageejendomme. Laderen installeres inden for bygningens matrikel og kan derfor bruges i de fleste bygninger. En smart kabelskinne til fortovet sikrer, at ladekablet ikke generer fodgængere eller bymiljøet. I modsætning til kantstensladere optager Elby hverken fortovs- eller parkeringsplads og gør det dermed lettere at lade elbiler – uden at ændre byens udtryk." text2="" alt="boligforening picture" linkType="text" linkText="Se hvordan Elby virker" href="../inwall" />
        </div>

        <div class="fade-in-up">
          <Prefooter header="Vil du vide mere om Elby?" buttonText="Læs vores FAQ for flere detaljer" buttonlink="../omelby#5_faq_omelby" linkVariant="secondary" />
        </div>
      </div>
    </template>

    <!-- Ejendomsselskaber under sektion -->
    <template x-if="selected === 'ejendom'">
      <div>
        <div class="fade-in-up">
          <Uspsection header="Fordele ved at vælge Elby til dit ejendomsselskab" text1="1. Intet abonnement" text2="2. Nemt at komme i gang - Vi klarer tilladelser og installation" text3="3. Overskudsdeling op til 60%" img1="../svg/abonnement.svg" img2="../svg/installation.svg" img3="../svg/overskudsdeling.svg" alt1="Installation ikon" alt2="Abonnement ikon" alt3="Overskudsdeling ikon" />
        </div>
        <div class="bg-sec_be-500 fade-in-up">
          <Splitcontent img="../bolig/bolig_opladning.webp" header="Ladeløsningen, der tjener sig selv ind" text1="At have et ladepunkt i bygningen gør boligen mere attraktiv. Og med overskudsdeling får I kontante fordele, hver gang laderen bruges – uanset om I selv har elbiler eller ej." text2="Få en Elby lader til jeres bygning, del jeres strøm, tjen penge på det og deltag aktivt i den grønne omstilling af persontransporten. Det vil også forbedre luftkvaliteten i byerne, gavne os alle og hjælpe fremtidens grønne el-system på vej. Vi kan gøre det sammen." alt="vægoplader picture" linkText="Læs mere om Elbys vision" href="../omelby" />
        </div>

        <div class="fade-in-up">
          <Infografik img="../svg/infografikEjendom.svg" linkText="Læs vores FAQ og bliv klogere" , linkType="text" , href="../omelby#5_faq_omelby" header="Jo mere der lades, desto mere af overskuddet får i tilbage" text1="Med en Elby ladeløsning i din bygning, kan dine lejere og brugere lade, hvor de bor eller arbejder. Du tjener op til 60 % af overskuddet, så dine udgifter til laderen er snart tjent hjem. Herefter bliver giver Elby laderen et fast bidrag til din bygnings indtjening." text2="Vi tager os desuden af alt det administrative med afregning med elselskabet. Og fordi vi også leverer strømmen, skal du ikke heller ikke bøvle med afgiftsrefusion." alt="infografik til ejendom" imgBg="bg-acc_gr-500" />
        </div>
        <div class="bg-sec_be-500 fade-in-up">
          <Splitcontent img="../bolig/bolig_opladerbygning.webp" header="En skræddersyet ladeløsning til din bygning" text1="Elbys ladeløsning er et aktiv, der kan øge forrentningen på din bygning og samtidig gøre, at du bidrager til den grønne omstilling - og så tager den kun et par timer at installere." text2="Elbys ladeløsning integreres let ind i din eksisterende bygning, og optager ingen plads. På den måde kan du tilbyde dine brugere af parkeringsområdet at lade, hvor det tidligerer ikke har været muligt" alt="ejendomsselskab picture" buttonText="Få Elby til ejendomsselskaber" buttonlink="../bestil" linkVariant="tertiary" />
        </div>

        <div class="fade-in-up mb-md">
          <Prefooter header="Vil du vide mere om Elby?" buttonText="Læs vores FAQ for flere detaljer" buttonlink="../omelby#5_faq_omelby" linkVariant="secondary" />
        </div>
      </div>
    </template>
    <!-- Grafik Section prefooter -->
    <div>
      <img src="../svg/bygrafik.svg" alt="Kbh building grafik" class="w-full h-auto" />
    </div>
  </section>
  <style>
    @media (min-width: 440px) {
      .min-440 {
        max-width: 500px;
      }
    }
  </style>
</MainLayout>
